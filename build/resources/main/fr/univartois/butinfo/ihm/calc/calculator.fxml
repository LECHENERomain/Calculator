                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onButtonMinusPress" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#onButton7Press" text="7" GridPane.rowIndex="2" />
